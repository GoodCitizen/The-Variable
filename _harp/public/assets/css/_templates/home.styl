// --------------------------------------------------
//   SECRET SAUCE
// --------------------------------------------------
.secret-sauce-wrapper
  // background #000 url(/assets/img/bg-secret-sauce-wrapper.png) left bottom repeat-x
  background #000

.secret-sauce
  text-align center
  a
    padding 15px 0
    width 100%
    display block
    position relative // For positioning the :after
    font-size 16px
    font-family vollkorn
    font-style italic
    line-height 1
    text-decoration none
    letter-spacing .08em
    color brand-gold
    em
      font-family nevis
      font-style normal
      text-transform uppercase
    &:before
      content url(/assets/img/icon-secret-sauce-caret.png)
      margin-left -35px
      padding-top 10px
      width 70px
      height 35px
      display block
      position absolute
      top -25px
      left 50%
      background #000
      border-radius 35px 35px 0 0
  @media (min-width: 56.25em)
    a
      padding 20px 0
      font-size 22px
      &:before
        margin-left -48px
        padding-top 15px
        width 96px
        height 48px
        top -30px
        border-radius 48px 48px 0 0

// --------------------------------------------------
//   ALL SECTIONS
// --------------------------------------------------
.experience,
.people,
.contact
  padding 40px 0

.section-title
  font-size 18px
  font-family vollkorn
  font-style italic
  text-align center
  text-transform none
  line-height 1.25
  letter-spacing .08em
  em
    display inline-block
    position relative
    font-family nevis
    font-style normal
    text-transform uppercase
    &:before,
    &:after
      display block
      width 38px
      height 10px
      position absolute
      top -2px
    &:before
      content url(/assets/img/bg-section-title-before-sm.png)
      left -55px
    &:after
      content url(/assets/img/bg-section-title-after-sm.png)
      right -55px
  @media (min-width: 30em)
    font-size 20px

.section-blurb
  margin 0 0 40px
  font-size 12px
  font-family vollkorn
  font-weight 400
  font-style italic
  line-height 1.3
  text-align center
  @media (min-width: 30em)
    font-size 14px

