//   PEOPLE
// --------------------------------------------------
.people-wrapper
  //

.people
  .section-blurb
    margin-left 30px
    margin-right 30px
    max-width 980px

.staff-grid
  border-top 1px solid brand-gray-light
  clearfix()

.staff
  margin 0
  width 33.3333%
  max-width 500px
  max-height 500px
  position relative
  float left
  overflow hidden
  border 1px solid brand-gray-light
  border-width 0 1px 1px 0
  cursor pointer
  img
    max-width 100%
    // min-height 100%
    display block
    position relative
  figcaption
    padding 10%
    width 100%
    height 100%
    position absolute
    top 0
    left 100%
    text-align center
    color #fff
    background rgba(0,0,0,.85)
    opacity 0
    cursor pointer
    transition all .25s ease-in-out
  &:hover
    figcaption
      left 0
      opacity 1
  .staff-name
    margin 0 0 10px
    padding 0 0 10px
    position relative
    font-size 11px
    color #fff
    &:after
      content ''
      width 25%
      height 1px
      display block
      position absolute
      left 50%
      bottom 0
      transform translate3d(-50%,0,0)
      background #fff
  .staff-title
    margin 0 0 3px
    font-size 10px
    font-family vollkorn
    font-style italic
    line-height 1
  .staff-hometown
    margin 0
    font-size 8px
    font-family nevis
    text-transform uppercase

