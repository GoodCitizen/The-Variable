// --------------------------------------------------
//   GENERIC CONTAINER
// --------------------------------------------------
.container
  margin 0 30px
  max-width 960px
  @media screen and (min-width: 1020px)
    margin 0 auto

// ----- Grid Variables ----- //
col-gutter       = 30px

.row
  @extends .group

.col
  min-height 300px
  + .col
    margin-top 0.625em
  @media screen and (min-width: 43.75em)
    padding-left (col-gutter/2)
    padding-right (col-gutter/2)
    float left
    + .col
      margin-top 0

@media screen and (min-width: 43.75em)
  .col--1of1
    width 100%
  .col--1of2
    width 50%
  .col--1of3
    width 33.333%
  .col--2of3
    width 66.663%
  .col--1of4
    width 25%
  .col--2of4
    @extends .col--1of2
  .col--3of4
    width 75%

.panels
  //

.panel
  &.has-bg
    background brand-gray-light

.panel-collection
  @extends .row
  &.panel-collection--centered
    margin 0 auto
    max-width 980px
  &.panel-collection--full
    width 100%

.panel-col
  @extends .col

@media screen and (min-width: 43.75em)
  .panel-col--1of1
    @extends .col--1of1
  .panel-col--1of2
    @extends .col--1of2
  .panel-col--1of3
    @extends .col--1of3
  .panel-col--2of3
    @extends .col--2of3
  .panel-col--1of4
    @extends .col--1of4
  .panel-col--2of4
    @extends .col--2of4
  .panel-col--3of4
    @extends .col--3of4

