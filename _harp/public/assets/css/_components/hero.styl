.hero-wrapper
  background url(/assets/img/bg-texture.png)

.hero
  padding 70px 0 50px
  background url(/assets/img/bg-hero.png) 50% 12% no-repeat
  background-size 25px 15px

.hero-blurbs
  //

.hero-blurb
  margin 0 0 20px
  font-size 24px
  font-family sentinel
  line-height 1.25
  text-transform none
  text-align center

.hero-blurb-badge
  margin-bottom 20px
  width 100%
  height 37px
  position relative
  span
    margin 0 auto
    width 82px
    height 37px
    display block
    font-size 14px
    font-family vollkorn
    font-weight 400
    font-style italic
    line-height 37px
    text-align center
    background url(/assets/img/bg-hero-badge.svg) no-repeat
    background-size 82px 37px
  &:before,
  &:after
    content ''
    display block
    width 31%
    height 1px
    position absolute
    top calc(50% \- 1px)
    left 0
    background brand-gray-dark
  &:after
    left auto
    right 0

.hero-tagline
  margin 0
  font-size 12px
  font-family vollkorn
  font-weight 400
  font-style italic
  line-height 1.3
  text-transform none
  text-align center
